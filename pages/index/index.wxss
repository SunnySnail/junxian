/**index.wxss**/
view {
    display: block;
}
text {
    display: block;
}
.container {
    position: fixed;
    top: 0;
    width: 100%;
    height: 100%;
    padding: 20rpx;
    box-sizing: border-box;
}

canvas {
    width: 100%;
    height: 400rpx;
    margin: 0 auto;
}

.container .num {
    color: #fd7d3d;
    margin-top: 10rpx;
}

.indexes-con {
    overflow: hidden;
    margin-bottom: 20rpx;
}

.indexes-item {
    width: 50%;
    box-sizing: border-box;
    float: left;
    text-align: center;
    flex: 1;
    font-size: 30rpx;
    color: #666;
    height: 130rpx;
}

.indexes-con .more-icon {
    position: absolute;
    top: 35rpx;
    right: 55rpx;
    display: inline;
    border: 10rpx solid black;
    border-left-color: transparent;
    border-right-color: transparent;
    border-bottom-color: transparent;
}

.update-info {
    overflow: hidden;
    width: 100%;
    color: #888;
    background-color: #eee;
    font-size: 24rpx;
    padding: 10rpx 20rpx;
    box-sizing: border-box;
    margin-top: 550rpx;
    box-shadow: 0 2px 5px #888;
}

.update-info .desc {
    float: left;
}

.update-info .date {
    float: right;
}

.invest-btn {
    position: fixed;
    width: 100%;
    bottom: 0;
    text-align: center;
    height: 100rpx;
    line-height: 100rpx;
    border-top: 1px solid #eee;
    box-shadow: 0 -8rpx 4px #eee;
    background-color: #fff;
    color: #fd7d3d;
    font-weight: bold;

}

.funds-list {
    height: 500rpx;
    overflow-y: scroll;
}

.fund {
    overflow: hidden;
    padding: 40rpx 20rpx;
    font-size: 30rpx;
    color: #666;
    border-bottom: 1px solid #eee;
}

.fund .name {
    float: left;
}

.fund .index-num {
    float: right;
}

.fund.chosen {
    background-color: #fd7d3d;
    color: #fff;
}

.fund:last-of-type {
    border-bottom: none;
}

.loading-tips {
    text-align: center;
    font-size: 28rpx;
    color: #999;
    margin-top: 40rpx;

}
